    <ProgressBar
        android:id="@+id/engines_up_bar"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:padding="25dp"
        android:indeterminate="true"
        android:progress="0"
        android:visibility="invisible"
        android:indeterminateTint="#3FE442"


        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/startStop_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_centerInParent="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/start_button"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        />



    <ImageView
        android:id="@+id/footer_panel"
        android:layout_width="match_parent"
        android:layout_height="88dp"

        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gray_gradient" />

    <TextView
        android:id="@+id/footer_txt"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_alignTop="@+id/footer_panel"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="24dp"
        android:text="Last change -> 20:33 - 30-Dec-2019\nNext change -> 20:53 - 30-Dec-2019"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:fontFamily="@font/roboto"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add"
            app:backgroundTint="#D1EFEA"

            android:layout_margin="16dp" />
        <!--- android:contentDescription="@string/submit" -->
